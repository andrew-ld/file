{
    "name": "amphp/file",
    "homepage": "https://github.com/amphp/file",
    "description": "Allows non-blocking access to the filesystem for Amp.",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/amphp/file/issues"
    },
    "keywords": [
        "file",
        "disk",
        "static",
        "async",
        "non-blocking",
        "amp",
        "amphp",
        "io",
        "filesystem"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Lowrey",
            "email": "rdlowrey@php.net"
        },
        {
            "name": "Aaron Piotrowski",
            "email": "aaron@trowski.com"
        },
        {
            "name": "Niklas Keller",
            "email": "me@kelunik.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "amphp/amp": "dev-ext-async",
        "amphp/byte-stream": "dev-ext-async",
        "amphp/parallel": "dev-ext-async"
    },
    "require-dev": {
        "amphp/php-cs-fixer-config": "dev-master",
        "amphp/phpunit-util": "^1",
        "phpunit/phpunit": "^6"
    },
    "autoload": {
        "psr-4": {
            "Amp\\File\\": "lib"
        },
        "files": ["lib/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\File\\Test\\": "test"
        }
    },
    "config": {
        "platform": {
            "php": "7.2.0"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "php-cs-fixer fix -v --diff --dry-run",
        "cs-fix": "php-cs-fixer fix -v --diff"
    }
}
